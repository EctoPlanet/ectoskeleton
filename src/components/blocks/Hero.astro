---
import { Image } from "astro:assets";
import HeroImage from "@components/HeroImage.astro";
import Button from "@components/ui/Button";

const { heroImage, heading, subheading, intro, heroImageAlt, class: className, buttons } = Astro.props;
---
<section class="bg-base-200">
  <div class="max-w-screen-2xl mx-auto p-6">
    <div class="flex justify-between items-center flex-col lg:flex-row-reverse max-w-screen-2xl py-10">
      <!-- <HeroImage imagePath={heroImage} altText={heroImageAlt} class="max-w-sm rounded-lg shadow-2xl" /> -->
      <Image src={heroImage} alt={heroImageAlt} class="max-w-1/2 rounded-lg shadow-2xl" width={500} height={500}/>
      <div class="space-y-6">
        <h1 class="text-5xl font-bold">{heading}</h1>
        <h2 class="text-4xl font-semibold">{subheading}</h2>
        <p>
          {intro}
        </p>
        <div class="flex flex-col items-center justify-start gap-4 lg:flex-row">
          {
            buttons.map((button) => (
              <Button
                client:load
                link={button.link}
                label={button.label}
                style={button.style}
                size={button.size}
                icon={button.icon}
              />
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>